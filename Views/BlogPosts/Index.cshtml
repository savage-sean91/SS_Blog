                <div class="blog-dis">
                    <h2 class="entry-title">@item.Title</h2>
                    <p>@Html.Raw(item.Body)</p>
                    <p class="post-meta">
                        <span class="author vcard">

                        </span>
                        <span class="published">@item.Created</span>
                    <p>Slug:  @item.Slug</p>
                    @if (User.IsInRole("Admin"))
                    {
                        @Html.ActionLink("Edit ", "Edit", new { id = item.Id }, new { @class = "btn btn-success" })
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-info" })
                        @Html.ActionLink("Details", "Details", new { slug = item.Slug }, new { @class = "btn btn-warning" })}
                    else
                    {
                        @Html.ActionLink("Details", "Details", new { slug = item.Slug }, new { @class = "btn btn-warning" })
                    }
                    @if (item.MediaURL != null)
                    {
                    <img class="img-responsive" src="@item.MediaURL" alt="">
                        }
                </div>
                    }

                </div>
